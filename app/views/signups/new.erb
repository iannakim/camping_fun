<h2>Sign Up Page</h2>

<p>Please select the camper and desired activity from below:</p>
<div>
<%=form_for @signup do |f|%>
<%=f.label "Camper Name:" %>
<%=f.collection_select(:camper_id, @campers, :id, :name) %><br>
<%=f.label "Activity:"%>
<%=f.collection_select(:activity_id, @activities, :id, :name) %><br>
<%=f.label "Time (select between 1-23)"%>
<%=f.number_field :time %><br><br>
<%=f.submit "Sign up!" %>
<%end%>
</div>
<%= button_to "Back to Index", signups_path, method: :get %>

